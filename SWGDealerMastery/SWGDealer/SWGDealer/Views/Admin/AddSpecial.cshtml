@model SWGDealer.Models.DealerModels.SalesSpecials
@{
	ViewBag.Title = "AddSpecial";
}

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Special</h1>
			<hr />
		</div>
		<div class="col-md-6">
			@using (Html.BeginForm())
			{
				<div class="form-group">
					<label>Title</label>
					@Html.TextBoxFor(m => m.SpecialsName, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Description</label>
					@Html.TextAreaFor(m => m.SpecialDesc, new { @class = "form-control" })
				</div>
				<button class="btn btn-primary">Submit</button>
            }
			<hr />
		</div>
	</div>
</div>

	<div id="specialsShown">

	</div>
	@section scripts{
		@Scripts.Render("~/Scripts/Home.js")
	}
