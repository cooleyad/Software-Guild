
@{
	ViewBag.Title = "Admin";
}

<h2 class="text-center">Admin</h2>
<hr />
@Html.ActionLink("Add Vehicle |", "Add")
@Html.ActionLink("Makes |", "Makes")
@Html.ActionLink("Models |", "Models")
<hr />

@using (Html.BeginForm())
{
	<div>
		Quick Search
		<br />
		<input type="text" id="searchKey" />
		<br />
		List Price:
		<br />
		<select id="minPrice" class="form-control">
			<option value="0">No Minimum</option>
			@for (int i = 0; i <= 50000; i += 5000)
			{
				<option value="@i">$@i</option>
			}
		</select>
		<select id="maxPrice" class="form-control">
			<option value="1000000">No Maximum</option>
			@for (int i = 5000; i <= 100000; i += 5000)
			{
				<option value="@i">$@i</option>
			}
		</select>
		Year:
		<br />
		<select id="minYear" class="form-control">
			<option value="2000">No Minimum</option>
			@for (int i = 2000; i <= 2018; i++)
			{
				<option value="@i">@i</option>
			}
		</select>
		<select id="maxYear" class="form-control">
			<option value="2018">No Maximum</option>
			@for (int i = 2001; i <= 2018; i++)
			{
				<option value="@i">@i</option>
			}
		</select>
		<button type="button" class="btn btn-default" onclick="adminSearch()">Search</button>
	</div>
}
<br />
<div id="searchResults">

</div>
<script src="~/Scripts/Admin.js"></script>
