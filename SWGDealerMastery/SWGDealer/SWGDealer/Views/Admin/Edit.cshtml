@model SWGDealer.Models.NewVehicleViewModel

@{
    ViewBag.Title = "Edit";
}

<h1>Edit</h1>

@Html.ValidationSummary("", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<div class="form-group">
		<div class="row">
			<div class="row">
				<div class="col-md-3">
					<h5>Purchase Type</h5>
					@Html.DropDownListFor(m => m.PurchaseTypeId, Model.PurchaseTypes, "-Choose One-", new { @class = "form-control" })
				</div>
			</div>
			<div class="col-md-3">
				<h5>Make</h5>
				@Html.DropDownListFor(m => m.VehicleMakeId, Model.Makes.ToList(), "-Choose One-", new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<h5>Model</h5>
				@Html.DropDownListFor(m => m.VehicleModelId, Model.Models, "-Choose One-", new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<h5>New or Used</h5>
				@Html.DropDownListFor(m => m.IsNew, new List<SelectListItem>
	   {
		   new SelectListItem{Text="New", Value="New" },
		   new SelectListItem{Text="Used", Value="Used" }
	   },
	   "-Choose New or Used-", new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<h5>Body Style</h5>
				@Html.DropDownListFor(m => m.BodyStyle, new List<SelectListItem>
	   {
		   new SelectListItem{Text="Sedan", Value="Sedan" },
		   new SelectListItem{Text="Coupe", Value="Coupe" },
		   new SelectListItem{Text="SUV", Value="SUV" },
		   new SelectListItem{Text="Van", Value="Van" }
	   },
	   "-Choose Body Style-", new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<h5>Transmission</h5>
				@Html.DropDownListFor(m => m.TransmissionType, new List<SelectListItem>
	   {
		   new SelectListItem{Text="Automatic", Value="Automatic" },
		   new SelectListItem{Text="Manual", Value="Manual" }
	   },
	   "-Choose Transmission-", new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Year</label>
				@Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Color</label>
				@Html.TextBoxFor(m => m.Color, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Interior Color</label>
				@Html.TextBoxFor(m => m.InteriorColor, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Mileage</label>
				@Html.TextBoxFor(m => m.Odometer, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>VIN Number</label>
				@Html.TextBoxFor(m => m.VIN, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Sale Price</label>
				@Html.TextBoxFor(m => m.SalePrice, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>MSRP</label>
				@Html.TextBoxFor(m => m.MSRP, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Vehicle Description</label>
				@Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label>Upload Image</label>
				@Html.TextBoxFor(m => m.Image, new { type = "file", @class = "form-control" })
			</div>
		</div>
		<button class="btn btn-primary">Save</button>
		@Html.ActionLink("Delete", "Delete", "Admin", new {id=Model.VehicleId }, new {@class= "btn, btn-primary" })
	</div>
}