@model SWGDealer.Models.UpdatePasswordViewModel

@{
    ViewBag.Title = "UpdatePassword";
}

<div class="row">
	<div class="col-lg-6">
		<h1 class="text-center">Update Password</h1>
		@using (Html.BeginForm("UpdatePassword", "Auth", FormMethod.Post))
		{
			@Html.ValidationSummary("", new { @class = "text-danger" })
			<div class="form-group">
				<label>New Password</label>
				@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
			</div>
			<div class="form-group">
				<label>Confirm Password</label>
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
			</div>
			<button class="btn btn-primary">Update Password</button>
			<br />
			<br />
			<br />
			<div>
				@if (TempData["PasswordUpdate"] != null)
				{
					<div class="center-block">
						<p class="alert alert-success text-center" id="successMessage">
							@TempData["PasswordUpdate"]
						</p>
					</div>
				}
			</div>
		}
	</div>
</div>
