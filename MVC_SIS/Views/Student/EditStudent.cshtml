@model Exercises.Models.ViewModels.StudentVM

@{
	ViewBag.Title = "EditStudent";
}

<div class="row">
	<div class="col-xs-12 col-sm-9">
		@Html.Partial("StudentNav")
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<h2>Edit Student</h2>
		<div class="row">
			@using (Html.BeginForm())
			{
				@Html.ValidationSummary(true)
				<div class="col-xs-12 col-sm-7">
					<div class="panel panel-primary">
						<div class="panel-heading">
							<h4 class="panel-title">Personal Details</h4>
						</div>
						<div class="panel-body">
							@Html.HiddenFor(s => s.Student.StudentId)
							<div class="form-group">
								<label>First Name:</label>
								@Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.Student.FirstName)
							</div>
							<div class="form-group">
								<label>Last Name:</label>
								@Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.Student.LastName)
							</div>
							<div class="form-group">
								<label>Major:</label>
								@Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.Student.Major.MajorId)
							</div>
							<div class="form-group">
								<label>GPA:</label>
								@Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
								@Html.ValidationMessageFor(m => m.Student.GPA)
							</div>
							<div class="form-group">
								<h4>Courses</h4>
								@Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
							</div>
							<div class="col-xs-12 col-sm-7">
								<div class="panel panel-primary">
									<div class="panel-heading">
										<h4 class="panel-title">Contact Details</h4>
									</div>
									<div class="panel-body">
										<div class="form-group">
											<label>Street 1:</label>
											@Html.TextBoxFor(a => a.Student.Address.Street1, new { @class = "form-control" })
										</div>
										<div class="form-group">
											<label>Street 2:</label>
											@Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
										</div>
										<div class="form-group">
											<label>City:</label>
											@Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control" })
										</div>
										<div class="form-group">
											<label>State:</label>
											@Html.DropDownListFor(m => m.Student.Address.State.StateName, Model.StateItems, "Select State", new { @class = "form-control" })
										</div>
										<div class="form-group">
											<label>Postal Code:</label>
											@Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control" })
										</div>

										<button class="btn btn-primary">Save</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>


