@model Exercises.Models.Data.Student

@{
    ViewBag.Title = "DeleteStudent";
}

<div class="row">
	<div class="col-xs-12">
		<h3>Delete Student</h3>
		@Html.ActionLink("Return to List", "List", "Student")
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		@using (Html.BeginForm())
		{
			@Html.HiddenFor(s => s.StudentId)
			<p>
				Do you wish to Delete @Html.DisplayFor(s => s.FirstName)?
			</p>
			<button type="submit" class="btn btn-sm btn-danger">Delete</button>
			@Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
		}
	</div>
</div>


